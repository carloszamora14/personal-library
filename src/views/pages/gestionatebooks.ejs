<div class="gestionate-books-section">
  <h3>Gestionate your books</h3>
  <button>Add</button>
  <div>
    <form action="/gestionatebooks" method="POST">
      <div>
        <label for="title">Title</label>
        <input type="text" name="title" id="title">
      </div>
      <div>
        <label for="author">Author</label>
        <input type="text" name="author" id="author">
      </div>
      <div>
        <label for="genre">Genre</label>
        <select name="genre" id="genre">
          <option value="Fantasy">Fantasy</option>
          <option value="Science Fiction (Sci-Fi)">Science Fiction (Sci-Fi)</option>
          <option value="Romance">Romance</option>
          <option value="Mistery">Mistery</option>
          <option value="Mistery">horror</option>
      </select>
      </div>
      <div>
        <label for="status">Status</label>
        <select name="status" id="status">
          <option value="Reading">Reading</option>
          <option value="Read">Read</option>
          <option value="Abandoned">Abandoned</option>
          <option value="Pending">Pending</option>
      </select>
      </div>
      <input type="submit" value="Add book" class="button">
      <input type="button" id="btnCancel" value="cancel">
    </form>
  </div>
</div>

<div>
  <table>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
</table>
</div>